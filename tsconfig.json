{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": false,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ],
    "paths": {
      "components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}