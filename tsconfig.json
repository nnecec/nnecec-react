{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      ".git",
      "node_modules"
    ]
  }
}