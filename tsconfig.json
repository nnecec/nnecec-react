{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "declaration": false,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es7"
    ],
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "store/*": [
        "./store/*"
      ],
      "components/*": [
        "./components/*"
      ],
      "utils/*": [
        "./utils/*"
      ],
      "styles/*": [
        "./styles/*"
      ],
    }
  }
}